generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gasto {
  id        String     @id @default(cuid())
  descricao String
  periodo   String
  categoria PaymanetCategoria @default(Outros)
  valor     Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PaymanetCategoria {
  Mercado
  Combustivel
  Cartao_Credito
  Faculdade
  Energia
  Agua
  Boleto
  Banco
  IPTU
  IPVA
  Outros
}